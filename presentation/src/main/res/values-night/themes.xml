<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelComics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView.WithoutIcon</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="snackbarSuccessBackground">@color/primaryLight</item>
        <item name="snackbarWarningBackground">@color/orange</item>
        <item name="snackbarErrorBackground">@color/red</item>
        <item name="colorDefaultImage">@color/white</item>
    </style>
</resources>